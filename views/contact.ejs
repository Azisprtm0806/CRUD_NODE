<div class="container mt-3">
  <div class="row">
    <div class="col-md-12">
      <div class="card mt-4">
        <div class="card-header">
          <a href="/contact/add" class="btn btn-outline-info mb-2">Add</a>
        </div>

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">NoHp</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts < 1) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger" role="alert">
                Data Contact Masih kosong
              </div>
            </td>
          </tr>
          <% } %> <% contacts.forEach((contact, i) => { i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.noHp %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %> "
                class="btn btn-success badge"
                >Detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
        </div>
      </div>
    </div>
  </div>
</div>
